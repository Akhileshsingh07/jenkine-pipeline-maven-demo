pipeline {
    agent any

    tools {
        maven "maven"
    }

    stages {
        stage("build") {
            steps {
                sh "mvn --version"
                sh "mvn clean install"
            }
        }
        stage("test") {
            steps {
                sh "mvn test"
            }
        }
        stage("build Docker image") {
            steps {
                script {
                    sh "docker build -t myimage1 ."
                }
            }
        }
    }
}
