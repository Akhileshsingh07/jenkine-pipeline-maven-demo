#!groovy

pipeline {
    agent any

    tools {
        maven "maven"
    }

    stages {
        stage("build") {
            steps {
                sh "mvn --version"
                sh "mvn clean install"
            }
        }
        stage("test") {
            steps {
                sh "mvn test"
                
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
